@model IEnumerable<EduPlanManager.Models.DTOs.Grade.GroupedGradeDto>

<div class="container mt-5">
    <h2 class="text-center">Danh Sách Điểm</h2>

    @if (Model.Any())
    {
        @foreach (var group in Model)
        {
            <div class="mt-4">
                <h6 class="text-primary">@group.SubjectName</h6>
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Năm Học</th>
                            <th>Học Kỳ</th>
                            <th>Loại Điểm</th>
                            <th>Điểm</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var grade in group.Grades)
                        {
                            <tr>
                                <td>@grade.AcademicYear</td>
                                <td>@grade.AcademicSemester</td>
                                <td>@grade.GradeType</td>
                                <td>@grade.GradeValue</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }
    else
    {
        <p class="text-center text-muted">Không có điểm nào để hiển thị.</p>
    }

</div>
