@model EduPlanManager.Models.Entities.Grade

@{
    ViewData["Title"] = "Thêm điểm cho sinh viên";
}

<h2>@ViewData["Title"]</h2>

<form method="post" class="form-horizontal">
    <div class="form-group">
        <label for="gradeType" class="col-sm-2 control-label">Loại điểm</label>
        <div class="col-sm-10">
            <select id="gradeType" name="gradeType" class="form-control">
                <option value="">Chọn loại điểm</option>
                <option value="1">Giữa kỳ</option>
                <option value="2">Cuối kỳ</option>
                <option value="3">Cộng điểm</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="score" class="col-sm-2 control-label">Điểm</label>
        <div class="col-sm-10">
            <input type="number" id="score" name="score" class="form-control" step="0.1" min="0" max="10" required />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <button type="submit" class="btn btn-primary">Thêm điểm</button>
        </div>
    </div>

    <input type="hidden" name="studentId" value="@ViewBag.StudentId" />
    <input type="hidden" name="subjectId" value="@ViewBag.SubjectId" />
</form>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
