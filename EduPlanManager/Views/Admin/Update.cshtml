@model EduPlanManager.Models.DTOs.User.UpdateUserDto

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h3 class="text-center">Chỉnh sửa thông tin người dùng</h3>
        </div>
        <div class="card-body">

            <form asp-action="Update" method="post" enctype="multipart/form-data">
                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="row">
                    <!-- First Name -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="FirstName">Họ</label>
                            <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" required />
                        </div>
                    </div>

                    <!-- Last Name -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="LastName">Tên</label>
                            <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName" required />
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Email">Email</label>
                            <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
                        </div>
                    </div>

                    <!-- Address -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Address">Địa chỉ</label>
                            <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" />
                        </div>
                    </div>                              
                    <!-- Submit Section -->
                    <div class="col-md-12 text-right">
                        <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("Users", "Admin")'">Hủy</button>
                        <button asp-action="Update" type="submit" class="btn btn-primary">Cập nhật</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
