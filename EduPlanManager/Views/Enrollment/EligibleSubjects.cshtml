@model List<EduPlanManager.Models.DTOs.Enrollment.EnrollmentListRespone>

<div class="container mt-5">
    <h2 class="text-center">Danh sách môn học có thể đăng ký</h2>

    @if (Model.Any())
    {
        <form method="post" action="/Enrollment/Enroll">
            <table class="table table-striped table-bordered table-hover mt-4">
                <thead class="thead-dark">
                    <tr>
                        <th>Mã môn học</th>
                        <th>Tên môn học</th>
                        <th>Ngày học</th>
                        <th>Buổi</th>
                        <th>Thời gian bắt đầu</th>
                        <th>Thời gian kết thúc</th>
                        <th>Chọn môn học</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var schedule in Model)
                    {
                        <tr>
                            <td>@schedule.SubjectCode</td>
                            <td>@schedule.SubjectName</td>
                            <td>@schedule.DayOfWeek</td>
                            <td>@schedule.Session</td>
                            <td>@schedule.StartTime</td>
                            <td>@schedule.EndTime</td>
                            <td>
                                <!-- Checkbox để sinh viên chọn môn học -->
                                <input type="checkbox" name="selectedSubjects" value="@schedule.SubjectId|@schedule.ScheduleId" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Nút đăng ký ở dưới cùng -->
            <div class="text-center mt-4">
                <input type="hidden" name="StudentId" value="@ViewBag.StudentId" />
                <button type="submit" class="btn btn-primary btn-sm">Đăng ký các môn học đã chọn</button>
            </div>
        </form>
    }
    else
    {
        <div class="alert alert-info text-center mt-4">
            Không có môn học nào để đăng ký.
        </div>
    }
</div>
