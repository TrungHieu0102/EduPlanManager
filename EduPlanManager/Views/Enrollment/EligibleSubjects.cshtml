@model EduPlanManager.Models.ViewModels.EnrollmentViewModel

<div class="container mt-5">
    <h2 class="text-center">Danh sách môn học đã đăng ký</h2>

    <!-- Danh sách các môn học đã đăng ký -->
    <table class="table table-striped table-bordered table-hover mt-4">
        <thead class="thead-dark">
            <tr>
                <th>Mã môn học</th>
                <th>Tên môn học</th>
                <th>Ngày học</th>
                <th>Buổi</th>
                <th>Thời gian bắt đầu</th>
                <th>Thời gian kết thúc</th>
                <th>Ngày đăng ký</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subject in Model.RegisteredSubjects)
            {
                <tr>
                    <td>@subject.SubjectCode</td>
                    <td>@subject.SubjectName</td>
                    <td>@subject.DayOfWeek</td>
                    <td>@subject.Session</td>
                    <td>@subject.StartTime</td>
                    <td>@subject.EndTime</td>
                    <td>@subject.RegisteredAt.ToString("dd/MM/yyyy")</td> <!-- Hiển thị ngày đăng ký -->
                </tr>
            }
        </tbody>
    </table>

    <h2 class="text-center">Danh sách môn học có thể đăng ký</h2>

    <!-- Danh sách các môn học có thể đăng ký -->
    <form method="post" action="/Enrollment/Enroll">
        <table class="table table-striped table-bordered table-hover mt-4">
            <thead class="thead-dark">
                <tr>
                    <th>Mã môn học</th>
                    <th>Tên môn học</th>
                    <th>Ngày học</th>
                    <th>Buổi</th>
                    <th>Thời gian bắt đầu</th>
                    <th>Thời gian kết thúc</th>
                    <th>Chọn môn học</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var subject in Model.EligibleSubjects)
                {
                    <tr>
                        <td>@subject.SubjectCode</td>
                        <td>@subject.SubjectName</td>
                        <td>@subject.DayOfWeek</td>
                        <td>@subject.Session</td>
                        <td>@subject.StartTime</td>
                        <td>@subject.EndTime</td>
                        <td>
                            <input type="checkbox" name="selectedSubjects" value="@subject.SubjectId|@subject.ScheduleId" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center mt-4">
            <input type="hidden" name="StudentId" value="@ViewBag.StudentId" />
            <button type="submit" class="btn btn-primary btn-sm">Đăng ký các môn học đã chọn</button>
        </div>
    </form>

    <!-- Phân trang -->
    <div class="text-center mt-4">
        @if (Model.TotalPages > 1)
        {
            for (int i = 1; i <= Model.TotalPages; i++)
            {
                <a href="@Url.Action("EligibleSubjects", new { page = i })" class="btn btn-sm btn-link">
                    @i
                </a>
            }
        }
    </div>
</div>
