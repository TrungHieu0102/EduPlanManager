    <nav style="background-color: #F6FAFF !important;" class="sidebar sidebar-offcanvas" id="sidebar">
        <ul class="nav">
            <li class="nav-item nav-profile">
                <a href="#" class="nav-link">
                    <div class="nav-profile-image">
                        <img src="@Model.ProfilePictureUrl" alt="profile">
                        <span class="login-status online"></span>
                    </div>
                    <div class="nav-profile-text d-flex flex-column">
                        <span class="font-weight-bold mb-2">@Model.FullName</span>
                        <span class="text-secondary text-small">Học sinh</span>
                    </div>
                    <i class="mdi mdi-bookmark-check text-success nav-profile-badge"></i>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/">
                    <span class="menu-title">Trang chủ</span>
                    <i class="mdi mdi-home menu-icon"></i>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/subject/index">
                    <span class="menu-title">Danh sách môn học có sẵn</span>
                    <i class="mdi mdi-book-open-variant menu-icon"></i>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Enrollment/EligibleSubjects">
                    <span class="menu-title">Đăng ký môn học</span>
                    <i class="mdi mdi-pencil menu-icon"></i>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/StudentSchedule/WeeklySchedule">
                    <span class="menu-title">Thời khóa biểu cá nhân</span>
                    <i class="mdi mdi-calendar-week menu-icon"></i>
                </a>
            </li>


            <li class="nav-item">
                <a class="nav-link" href="#" id="gradeMenuToggle">
                    <span class="menu-title">Kết quả học tập</span>
                    <i class="mdi mdi-chart-bar menu-icon"></i>
                </a>
                <ul class="collapse nav flex-column ms-3" id="gradeSubmenu" style="display: none;">
                    <li class="nav-item">
                        <a class="nav-link" href="/grade/index">
                            <span class="menu-title">Kết quả học tập</span>
                        </a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="/grade/StudentGrades">
                            <span class="menu-title">Chi tiết điểm số</span>
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var gradeMenuToggle = document.getElementById('gradeMenuToggle');
        var gradeSubmenu = document.getElementById('gradeSubmenu');

        gradeMenuToggle.addEventListener('click', function (e) {
            e.preventDefault(); // Ngăn không cho chuyển trang

            // Kiểm tra trạng thái hiển thị của submenu
            if (gradeSubmenu.style.display === 'none' || gradeSubmenu.style.display === '') {
                // Nếu menu bị ẩn, thì hiện ra
                gradeSubmenu.style.display = 'block';
                gradeSubmenu.style.height = `${gradeSubmenu.scrollHeight}px`; // Dùng scrollHeight để hiển thị đúng chiều cao
            } else {
                // Nếu menu đang mở, thì ẩn đi
                gradeSubmenu.style.height = '0'; // Áp dụng chiều cao 0 để ẩn menu
                gradeSubmenu.addEventListener('transitionend', function () {
                    gradeSubmenu.style.display = 'none'; // Ẩn menu sau khi animation kết thúc
                }, { once: true });
            }
        });
    });
</script>
